<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Apteka - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/image/caduceus.png" height="40" />APTEKA
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">                       
                        
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a id="search-button" class="nav-link text-dark" asp-area="" asp-controller="ProductNames" asp-action="Index">
                                <img src="~/image/search.png" height="40" />
                            </a>
                        </li>
                        <li class="nav-item">
                            <a id="shopping-cart-button" class="nav-link text-dark" asp-area="" asp-controller="ShoppingCart" asp-action="Index">
                                <div class="mycontainer">
                                    <img src="~/image/carts.png" height="40" />
                                    
                                    <div class="cartcount">
                                        @ViewBag.CartCount
                                    </div>
                                </div>
                            </a>
                            
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <img src="~/image/user.png" height="40" />
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <img src="~/image/list.png" height="40" />
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; Apteka internetowa - Infolinia: 800 110 110
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    .mycontainer {
        position: relative;
        text-align: center;
    }

    .cartcount {
        position: absolute;
        top: 80%;
        left: 95%;
    }
</style>